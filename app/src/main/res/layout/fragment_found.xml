<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_300">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/white">

        <GridView
            android:id="@+id/found_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="120dip"
            android:horizontalSpacing="4dip"
            android:numColumns="3"
            android:verticalSpacing="4dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/loopOpinion_image"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:text="新观点"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_textlines"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <sniper.appdemo.cn.myapplication.utils.MarqueView
            android:id="@+id/mv1"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/loopOpinion_image"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
        </sniper.appdemo.cn.myapplication.utils.MarqueView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/loopProduct_image"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:text="新产品"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/bg_textlines"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <sniper.appdemo.cn.myapplication.utils.MarqueView
            android:id="@+id/mv2"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/loopProduct_image"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
        </sniper.appdemo.cn.myapplication.utils.MarqueView>

    </LinearLayout>


</LinearLayout>